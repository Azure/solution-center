{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managedInstanceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Managed Instance. Only lowercase letters, numbers and hyphens '-', and it can't have more than 63 characters in length"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of the Managed Instance. Default is the location of the selected resource group."
            }
        },
        "skuName": {
            "type": "string",
            "defaultValue": "GP_Gen5",
            "allowedValues": [
                "GP_Gen4",
                "GP_Gen5",
                "GP_G8IM",
                "GP_G8IH",
                "BC_Gen4",
                "BC_Gen5",
                "BC_G8IM",
                "BC_G8IH"
            ],
            "metadata": {
                "description": "Managed instance SKU. If SKU is not set, skuEdition and hardwareFamily values have to be populated."
            }
        },
        "storageSizeInGB": {
            "type": "int",
            "defaultValue": 256,
            "minValue": 32,
            "metadata": {
                "description": "Determines how much Storage size in GB to associate with instance. Increments of 32 GB allowed only."
            }
        },
        "vCores": {
            "type": "int",
            "defaultValue": 8,
            "allowedValues": [
                4,
                8,
                16,
                24,
                32,
                40,
                64,
                80
            ],
            "metadata": {
                "description": "The number of vCores."
            }
        },
        "administratorLogin": {
            "type": "string",
            "metadata": {
                "description": "The login of the Managed Instance admin."
            }
        },
        "administratorLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password of the Managed Instance admin."
            }
        },
        "requestedBackupStorageRedundancy": {
            "type": "string",
            "defaultValue": "Geo",
            "allowedValues": [
                "Geo",
                "Zone",
                "Local",
                "GeoZone"
            ],
            "metadata": {
                "description": "Option for configuring backup storage redundancy. Selecting 'Geo' will enable 'RA-GRS'."
            }
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Premium_LRS",
                "Standard_LRS",
                "StandardSSD_LRS"
            ],
            "metadata": {
                "description": "OS disk type of the VM."
            }
        },
        "securityType": {
            "type": "string",
            "defaultValue": "DiskWithVMGuestState",
            "allowedValues": [
                "VMGuestStateOnly",
                "DiskWithVMGuestState"
            ],
            "metadata": {
                "description": "VM security type."
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D4s_v3",
            "allowedValues": [
                "Standard_D4s_v3",
                "Standard_D8ds_v4",
                "Standard_E32ads_v5"
            ],
            "metadata": {
                "description": "Size of the VM."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "networkTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "resourceName": {
                        "value": "[parameters('managedInstanceName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/milanbrkic-ms/solution-center/iaas-mi/solutions/azure-sqlmi-v1/nested/network.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "miTemplate",
            "dependsOn": [
                "Microsoft.Resources/deployments/networkTemplate"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "managedInstanceName": {
                        "value": "[parameters('managedInstanceName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "subnetId": {
                        "value": "[reference('networkTemplate').outputs.miSubnetId.value]"
                    },
                    "skuName": {
                        "value": "[parameters('skuName')]"
                    },
                    "vCores": {
                        "value": "[parameters('vCores')]"
                    },
                    "storageSizeInGB": {
                        "value": "[parameters('storageSizeInGB')]"
                    },
                    "administratorLogin": {
                        "value": "[parameters('administratorLogin')]"
                    },
                    "administratorLoginPassword": {
                        "value": "[parameters('administratorLoginPassword')]"
                    },
                    "requestedBackupStorageRedundancy": {
                        "value": "[parameters('requestedBackupStorageRedundancy')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/milanbrkic-ms/solution-center/iaas-mi/solutions/azure-sqlmi-v1/nested/managedinstance.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "vmTemplate",
            "dependsOn": [
                "Microsoft.Resources/deployments/miTemplate"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "resourceName": {
                        "value": "[parameters('managedInstanceName')]"
                    },
                    "subnetId": {
                        "value": "[reference('networkTemplate').outputs.vmSubnetId.value]"
                    },
                    "adminUserName": {
                        "value": "[parameters('administratorLogin')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('administratorLoginPassword')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "osDiskType": {
                        "value": "[parameters('osDiskType')]"
                    },
                    "securityType": {
                        "value": "[parameters('securityType')]"
                    },
                     "sshPublicKey": {
                        "value": "[parameters('sshPublicKey')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/milanbrkic-ms/solution-center/iaas-mi/solutions/azure-sqlmi-v1/nested/vm.json"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "akvTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "name": {
                        "value": "[concat(parameters('managedInstanceName'), '-akv')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/milanbrkic-ms/solution-center/iaas-mi/solutions/azure-sqlmi-v1/nested/keyVauld.json"
                }
            }
        }
    ],
    "outputs": {},
    "variables": {}
}
