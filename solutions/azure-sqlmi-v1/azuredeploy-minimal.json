{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managedInstanceName": {
            "metadata": {
                "description": "name"
            },
            "type": "string"
        },
        "administratorLogin": {
          "type": "string",
          "metadata": {
            "description": "The login of the Managed Instance admin."
          }
        },
        "administratorLoginPassword": {
          "type": "securestring",
          "metadata": {
            "description": "The password of the Managed Instance admin."
          }
        },
        "sshPublicKey": {
            "metadata": {
                "description": "ssh public key"
            },
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "mainTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "managedInstanceName": {
                        "value": "[parameters('managedInstanceName')]"
                    },
                    "skuName": {
                        "value": "GP_Gen5"
                    },
                    "vCores": {
                        "value": 4
                    },
                    "storageSizeInGB": {
                        "value": 32
                    },
                    "administratorLogin": {
                        "value": "[parameters('administratorLogin')]"
                    },
                    "administratorLoginPassword": {
                        "value": "[parameters('administratorLoginPassword')]"
                    },
                    "requestedBackupStorageRedundancy": {
                        "value": "Local"
                    },
                    "sshPublicKey": {
                        "value": "[parameters('sshPublicKey')]"
                    }
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Azure/solution-center/staging/solutions/azure-sqlmi-v1/azuredeploy.json"
                }
            }
        }
    ],
    "outputs": {
        "mainTemplateOutputs": {
            "type": "object",
            "value": "[reference('mainTemplate').outputs]"
        }
    }
}
