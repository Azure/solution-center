{
    "$schema": "../../Definitions/dx.schema.json",
    "stringSource": "../Resources/CreateStrings.resjson",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "[parameters('title')]",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "sshPublicKey",
                            "type": "Microsoft.Compute.CredentialsCombo",
                            "label": {
                              "authenticationType": "Authentication type",
                              "password": "Password",
                              "confirmPassword": "Confirm password",
                              "sshPublicKey": "SSH public key"
                            },
                            "toolTip": {
                              "sshPublicKey": ""
                            },
                            "constraints": {
                              "required": true
                            },
                            "options": {
                              "hidePassword": true
                            },
                            "osPlatform": "Linux",
                            "visible": true
                          }
                    ]
                }
            ],
            "deployment": {
                "parameters": {
                    "resourceNamePrefix": "[steps('basics').resourceScope.resourceName]",
                    "sshPublicKey": "[steps('basics').sshPublicKey.sshPublicKey]"
                },
                "kind": "ResourceGroup",
                "location": "[steps('basics').resourceScope.location.name]",
                "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
                "template": {
                    "file": "../Deployments/LAMP/azuredeploy-small2mid-noha.json"
                }
            }
        }
    }
}
