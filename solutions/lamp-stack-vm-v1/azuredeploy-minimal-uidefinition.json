{
    "$schema": "../../Definitions/dx.schema.json",
    "stringSource": "DashboardTemplateView.resjson",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "formTemplateViewTitle",
            "steps": [
                {
                    "name": "basics",
                    "label": "formTemplateViewLabel",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": [
                                    "microsoft.resources/resourcegroups"
                                ]
                            },
                            "resourceName": {
                                "label": "Name",
                                "toolTip": "This prefix will be used for all resources deployed as part of this solution" ,
                                "constraints": {
                                   "validations": [
                                        {
                                            "regex": "^[a-z0-9]{1,15}$",
                                            "message": "Only lowercase alphanumeric characters are allowed, and the value must be 1-15 characters long."
                                        }
                                   ]
                                }
                             }
                        },
                        {
                          "name": "element1",
                          "type": "Microsoft.Compute.CredentialsCombo",
                          "label": {
                            "authenticationType": "Authentication type",
                            "password": "Password",
                            "confirmPassword": "Confirm password",
                            "sshPublicKey": "SSH public key"
                          },
                          "toolTip": {
                            "authenticationType": "",
                            "password": "",
                            "sshPublicKey": ""
                          },
                          "constraints": {
                            "required": true,
                            "customPasswordRegex": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{12,}$",
                            "customValidationMessage": "The password must be alphanumeric, contain at least 12 characters, and have at least 1 letter and 1 number."
                          },
                          "options": {
                            "hideConfirmation": false,
                            "hidePassword": false
                          },
                          "osPlatform": "Linux",
                          "visible": true
                        }
                    ]
                }
            ]
        },
        "deployment": {
            "parameters": {
                "resourceNamePrefix": "[steps('basics').resourceScope.resourceName]",
                "sshPublicKey": "[steps('basics').sshPublicKey.sshPublicKey]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
            "template": {
                "file": "../Deployments/LAMP/azuredeploy-small2mid-noha.json"
            }
        }
    }
}
