{
    "$schema": "../../Definitions/dx.schema.json",
    "stringSource": "DashboardTemplateView.resjson",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "formTemplateViewTitle",
            "steps": [
                {
                    "name": "basics",
                    "label": "formTemplateViewLabel",
                    "elements": [
                        {
                            "type": "Microsoft.Common.SubscriptionSelector",
                            "name": "subscription"
                        },
                        {
                            "name": "resourceSelector",
                            "constraints": {
                                "required": true
                            },
                            "type": "Microsoft.Solutions.ResourceSelector",
                            "label": "formResSelectorLabel",
                            "resourceType": "[parameters('resourceType')]",
                            "scope": {
                                "subscriptionId": "[steps('basics').subscription.subscriptionId]"
                            }
                        },
                        {
                            "type": "Microsoft.Common.TextBox",
                            "label": "formDashTextLabel",
                            "name": "dashboardName",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^.{1,200}$",
                                        "message": "formDashValLabel"
                                    }
                                ]
                            }
                        },
                        {
							"name": "sshPublicKey",
							"type": "Microsoft.Compute.CredentialsCombo",
							"label": {
								"password": "Password",
								"confirmPassword": "Confirm password"
							},
							"toolTip": {
								"password": ""
							},
							"constraints": {
								"required": true,
								"customPasswordRegex": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{12,}$",
								"customValidationMessage": "The password must be alphanumeric, contain at least 12 characters, and have at least 1 letter and 1 number."
							},
							"options": {
								"hideConfirmation": false,
								"hidePassword": true
							},
							"osPlatform": "Linux",
							"visible": true
						}
                    ]
                }
            ]
        },
        "outputs": {
            "resourceId": "[steps('basics').resourceSelector]",
            "dashboardName": "[steps('basics').dashboardName]"
        }
    }
}
